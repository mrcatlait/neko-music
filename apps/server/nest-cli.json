{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "type": "application",
  "root": "./",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      { "include": "../src/migrations/**", "outDir": "dist/src", "watchAssets": true }
    ]
  }
}
