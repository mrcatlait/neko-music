{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "types": ["bun-types", "cypress"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@routes": ["routes"],
      "@selectors": ["selectors"]
    }
  },
  "include": ["**/*.ts"]
}
