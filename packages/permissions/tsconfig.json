{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "node",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ],
}